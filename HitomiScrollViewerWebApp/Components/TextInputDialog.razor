<MudDialog>
    <DialogContent>
        <MudTextField FullWidth="true"
                      Label="Name"
                      Counter="50"
                      MaxLength="50"
                      Immediate="true"
                      T="string"
                      @bind-Text="@Text"
                      @bind-Text:after="@TextChanged"
                      Error="@_showErrorMessage"
                      ErrorText="@_errorMessage" />
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Disabled="@(Text.Length == 0)">@ActionText</MudButton>
        <MudButton OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>