<MudPaper style="display: grid; grid-template-columns: 240px auto 120px" class="pa-4 gap-4" Outlined >
    <div>
        <MudText>1749726</MudText>
        <MudText>Here is a title for a gallery</MudText>
    </div>
    <div class="align-self-end">
        <MudProgressLinear Color="Color.Primary" Value="@_progress" Min="0" Max="@_max" Class="mb-1" />
        <MudText Style="float: right;">@(_progress.ToString() + '/' + _max.ToString())</MudText>
    </div>
    <div class="d-flex gap-4">
        <MudIconButton Icon="@(_isPaused ? Icons.Material.Filled.Pause : Icons.Material.Filled.PlayArrow)" />
        <MudIconButton Icon="@Icons.Material.Filled.Delete" />
    </div>
</MudPaper>