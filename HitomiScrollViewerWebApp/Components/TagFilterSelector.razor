@inherits ComponentBase

<div class="d-flex flex-column gap-4 @Class" style="@Style">
    @if (HeaderText != null)
    {
        <MudText Color="@HeaderColor" Typo="Typo.h6" Align="Align.Center">@HeaderText</MudText>
    }
    <MudChipSet SelectionMode="SelectionMode.MultiSelection"
                @bind-SelectedValues="@SelectedChipModels"
                @bind-SelectedValues:after="(() => SelectedChipModelsChanged?.Invoke(SelectedChipModels))"
                SelectedColor="@Color.Primary"
                Variant="@Variant.Filled"
                Class="overflow-y-auto">
        @foreach (ChipModel<TagFilterDTO> model in ChipModels) {
            <ColorCorrectedChip T="TagFilterDTO"
                                Model="@model"
                                ToStringFunc="@(model => model.Value.Name)"
                                OnSelectedChanged="@OnSelectedChanged" />
        }
    </MudChipSet>
</div>