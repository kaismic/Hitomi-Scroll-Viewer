<Grid
    x:Class="Hitomi_Scroll_Viewer.SearchPageComponent.SearchLinkItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
    <HyperlinkButton Grid.Column="0"
                     NavigateUri="{x:Bind _searchLink}"
                     HorizontalAlignment="Stretch">
        <TextBlock Grid.Column="1"
                   TextWrapping="WrapWholeWords"
                   FontSize="10"
                   Text="{x:Bind _displayText}"/>
    </HyperlinkButton>
    <Button Grid.Column="1" CommandParameter="{x:Bind}">
        <Button.Command>
            <StandardUICommand x:Name="DeleteCommand" Kind="Delete" Label="Delete"/>
        </Button.Command>
        <Button.Content>
            <SymbolIcon Symbol="Delete"></SymbolIcon>
        </Button.Content>
    </Button>
</Grid>
