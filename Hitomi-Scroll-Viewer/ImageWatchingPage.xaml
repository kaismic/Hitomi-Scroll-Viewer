<Page
    x:Class="Hitomi_Scroll_Viewer.ImageWatchingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="MainGrid">
        <ScrollViewer x:Name="MainScrollViewer" KeyDown="HandleKeyDown" IsTabStop="True">
            <StackPanel x:Name="ImageContainer" Orientation="Vertical"/>
        </ScrollViewer>
        <CommandBar x:Name="TopCommandBar"
                    ClosedDisplayMode="Minimal"
                    OverflowButtonVisibility="Collapsed"
                    HorizontalAlignment="Center"
                    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <AppBarButton MinWidth="50"
                          Icon="Back"
                          Label="Go Back"
                          Click="HandleGoBackBtnClick"
                          />
            <AppBarSeparator MinWidth="50"/>
            <AppBarButton x:Name="ViewModeBtn"
                          MinWidth="120"
                          Icon="ViewAll"
                          Label="Change View Mode"
                          Click="HandleViewModeBtnClick"
                          />
            <AppBarSeparator MinWidth="50"/>
            <AppBarButton x:Name="BookmarkBtn"
                          MinWidth="140"
                          IsEnabled="False"
                          Icon="Save"
                          />
            <AppBarSeparator MinWidth="50"/>
            <AppBarElementContainer>
                <Slider x:Name="ImageScaleSlider"
                        StepFrequency="0.1"
                        TickFrequency="0.1"
                        Value="0.5"
                        Minimum="0.1"
                        Maximum="1.5"
                        MinWidth="240"
                        Header="Image Size"
                        FontSize="14"
                        ValueChanged="ChangeImageSize"/>
            </AppBarElementContainer>
            <AppBarSeparator MinWidth="50"/>
            <AppBarElementContainer>
                <Slider StepFrequency="0.25"
                        TickFrequency="0.25"
                        Value="3"
                        Minimum="0.25"
                        Maximum="5"
                        MinWidth="240"
                        Header="Auto Page Turning / Scrolling Speed"
                        FontSize="14"
                        ValueChanged="SetScrollSpeed"/>
            </AppBarElementContainer>
            <AppBarSeparator MinWidth="50"/>
            <AppBarToggleButton x:Name="AutoScrollBtn"
                                MinWidth="240"
                                Click="HandleAutoScrollBtnClick"/>
            <AppBarToggleButton x:Name="LoopBtn"
                                IsChecked="True"
                                Label="Toggle Loop"
                                Icon="RepeatAll"
                                MinWidth="90"
                                Click="HandleLoopBtnClick"/>
        </CommandBar>
    </Grid>
</Page>
