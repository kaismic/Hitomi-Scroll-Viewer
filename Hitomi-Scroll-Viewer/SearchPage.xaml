<Page
    x:Class="Hitomi_Scroll_Viewer.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ScrollViewer x:Name="MainScrollViewer">
        <!--3 rows, 3 columns-->
        <Grid x:Name="RootGrid">
            <Grid x:Name="TagContainerGrid" Grid.Row="0" Grid.Column="0"/>
            <!--Row 1, Column 0, 1 Columnspan-->
            <!--8 rows, 12 columns-->
            <Grid x:Name="HyperlinkGrid" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch">
                <Button x:Name="GenerateHyperlinkBtn"
                        Grid.Row="0"
                        Click="GenerateHyperlink"
                        Height="100"
                        FontSize="18"
                        Content="Generate and Copy Link"
                        />
                <StackPanel x:Name="GeneratedHyperlinks"
                            Grid.Row="1"
                            Orientation="Vertical"
                />
            </Grid>
            <!--Row 1, Column 1, 1 Columnspan-->
            <!--1 row, 12 columns-->
            <Grid x:Name="LinkInputGrid" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBox x:Name="GalleryIDTextBox"
                         KeyDown="HandleGalleryIDSubmitKeyDown"
                         TextWrapping="Wrap"
                         PlaceholderText="Enter a Gallery ID or an URL Here. e.g. 2058075 or https://..."
                         />
                <Button x:Name="LoadImageBtn" Click="HandleLoadImageBtnClick">
                    <TextBlock Text="Load Images" TextWrapping="WrapWholeWords"/>
                </Button>
            </Grid>
            <!--Row 1, Column 2, 1 Columnspan-->
            <Grid x:Name="TagControlGrid" Grid.Row="1" Grid.Column="2" Height="500" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBox x:Name="TagNameTextBox"
                             PlaceholderText="Tag List Name"
                             FontSize="16"
                             Margin="0 8 0 16"
                             />
                    <ComboBox x:Name="TagListComboBox"
                              Margin="0 16 0 16"
                              SelectionChanged="LoadTagsInTextBox"
                              HorizontalAlignment="Stretch"
                              />
                </StackPanel>
                <StackPanel x:Name="ControlButtonContainer" Grid.Column="1"/>
            </Grid>
            <!--Row 2, Column 0, Full Columnspan-->
            <!--2 rows, 1 column-->
            <Grid Grid.Row="2"
                  Grid.Column="0" Grid.ColumnSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <TextBlock FontSize="36"
                           Grid.Row="0"
                           Text="Bookmarks"/>
                <StackPanel x:Name="BookmarkPageBtnsPanel"
                            Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"/>
                <Grid x:Name="BookmarkGrid" Grid.Row="2"/>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
