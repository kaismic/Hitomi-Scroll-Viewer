<?xml version="1.0" encoding="utf-8"?>
<StackPanel
    x:Class="HitomiScrollViewerLib.Views.SearchPageViews.GalleryLanguageASBWrapper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <AutoSuggestBox QueryIcon="Find"
                    ItemsSource="{x:Bind ViewModel.ItemsSource, Mode=OneWay}"
                    GotFocus="{x:Bind ViewModel.AutoSuggestBox_GotFocus}"
                    TextChanged="{x:Bind ViewModel.AutoSuggestBox_TextChanged}"
                    QuerySubmitted="{x:Bind ViewModel.AutoSuggestBox_QuerySubmitted}"
                    Text="{x:Bind ViewModel.Text, Mode=TwoWay}"
                    DisplayMemberPath="{x:Bind ViewModel.MemberPath, Mode=OneWay}"
                    TextMemberPath="{x:Bind ViewModel.MemberPath, Mode=OneWay}"
                    />
</StackPanel>
