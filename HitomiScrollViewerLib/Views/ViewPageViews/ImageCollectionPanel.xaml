<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="HitomiScrollViewerLib.Views.ViewPageViews.ImageCollectionPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:models="using:HitomiScrollViewerLib.Models"
    xmlns:entities="using:HitomiScrollViewerLib.Entities"
    >
    <Viewbox>
        <StackPanel x:Name="MainStackPanel"
                    FlowDirection="{x:Bind models:CommonSettings.Main.FlowDirectionModel.Value, Mode=OneWay}"
                    Orientation="Horizontal"
                    />
    </Viewbox>
</UserControl>
