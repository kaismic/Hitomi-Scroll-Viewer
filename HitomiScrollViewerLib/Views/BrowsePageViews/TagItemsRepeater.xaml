<?xml version="1.0" encoding="utf-8"?>
<Grid
    x:Class="HitomiScrollViewerLib.Views.BrowsePageViews.TagItemsRepeater"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ct="using:CommunityToolkit.WinUI.Controls"
    xmlns:entities="using:HitomiScrollViewerLib.Entities"
    >
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="128"/>
        <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <TextBlock Grid.Column="0" Text="{x:Bind ViewModel.CategoryLabel}"/>
    <ItemsRepeater Grid.Column="1" ItemsSource="{x:Bind ViewModel.Tags}">
        <ItemsRepeater.Layout>
            <ct:WrapLayout VerticalSpacing="2" HorizontalSpacing="4"/>
        </ItemsRepeater.Layout>
        <ItemsRepeater.ItemTemplate>
            <DataTemplate x:DataType="entities:Tag">
                <Border Background="DarkGray" CornerRadius="{StaticResource OverlayCornerRadius}">
                    <TextBlock Foreground="White" Text="{x:Bind Value}"/>
                </Border>
            </DataTemplate>
        </ItemsRepeater.ItemTemplate>
    </ItemsRepeater>
</Grid>
