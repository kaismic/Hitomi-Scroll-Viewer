<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="HitomiScrollViewerLib.Controls.SearchPageComponents.CRUDActionContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    
    Style="{StaticResource DefaultContentDialogStyle}"
    DefaultButton="Primary"
    >
    <ContentDialog.Title>
        <TextBlock x:Name="TitleTextBlock" TextWrapping="WrapWholeWords"/>
    </ContentDialog.Title>
    <StackPanel x:Name="MainStackPanel" Spacing="16">
        <ProgressBar x:Name="ActionProgressBar"
                     IsIndeterminate="True"
                     Visibility="Collapsed"
                     Margin="8 0"/>
    </StackPanel>
</ContentDialog>
